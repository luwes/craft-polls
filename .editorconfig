# EditorConfig coding style config (http://EditorConfig.org)
# This file needs to be renamed to .editorconfig to be seen by your editor.

# Remove this line if you want EditorConfig to keep looking for more
# .editorconfig files in parent directories.
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{*.php,*.html}]
indent_size = 4
end_of_line = lf
